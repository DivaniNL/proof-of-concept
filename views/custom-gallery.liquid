                                    <figcaption class="art-piece--title-wrapper">
                                        <h2 class="title-m art-piece--title">{{artPiece.title}}</h2>
                                    </figcaption>
                                    <img
                                        {% if forloop.index > 2 %}
                                            loading="lazy"
                                        {% else %}
                                            loading= "eager" 
                                        {% endif %} 
                                        sizes="(max-width: 720px) 100vw, 500px"
                                        class="art-piece--image" src="https://fdnd-agency.directus.app/assets/{{artPiece.image.id}}"
                                        alt="Afbeelding van {{artPiece.title}}" width="{{artPiece.image.width}}" height="{{artPiece.image.height}}"
                                    >

                                </figure>
                                   
